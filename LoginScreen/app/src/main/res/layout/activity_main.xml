<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#66cdaa"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mahathi.loginscreen.MainActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="37dp"
        android:hint="@string/email" android:background="#ffffff"
        android:layout_marginStart="0dp"
        android:layout_marginTop="77dp"
        android:id="@+id/editText4"
        style="@style/Widget.AppCompat.AutoCompleteTextView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/editText4"
        android:layout_alignLeft="@+id/editText4"
        android:layout_alignStart="@+id/editText4"
        android:hint="@string/pwd"
        android:background="#ffffff"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="10dp"
        android:id="@+id/editText"
        style="@style/Widget.AppCompat.AutoCompleteTextView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/editText4"
        android:layout_alignLeft="@+id/editText4"
        android:layout_alignStart="@+id/editText4"
        android:hint="@string/pwd" android:background="#ffffff"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="10dp"

        android:id="@+id/editText5"
        style="@style/Widget.AppCompat.AutoCompleteTextView" />

    <Button
        android:text="Login" android:textColor="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/editText5"
        android:layout_alignLeft="@+id/editText5"
        android:layout_alignStart="@+id/editText5"
        android:layout_marginTop="29dp" android:background="#eeeee0"
        android:id="@+id/button2" />

    <TextView
        android:text="Not a member ? Sign up now."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="40dp" android:textColor="#ffffff"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat" />
</RelativeLayout>
